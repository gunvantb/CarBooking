<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/MainRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200adp"
                android:scaleType="fitXY"
                android:src="@drawable/intro_img_1"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_20adp"
                android:text="@string/intro_title_1"
                android:textAlignment="center"
                android:textColor="@color/intro_text_color"
                android:textSize="@dimen/_24adp"
                android:fontFamily="@font/urbanist_bold"/>

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20adp"
                android:layout_marginHorizontal="@dimen/_20adp"
                android:text="@string/intro_description_1"
                android:textAlignment="center"
                android:textColor="@color/intro_description_color"
                android:textSize="@dimen/_14asp"
                android:fontFamily="@font/urbanist_medium"/>
        </LinearLayout>

    </RelativeLayout>

</layout>